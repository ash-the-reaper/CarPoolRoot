<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="90dp"
    android:layout_marginBottom="100dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMain"
    android:background="@drawable/gradient_list"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/llHeaderDetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtFrom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center_vertical"
                android:text="FRom"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center_vertical|right"
                android:text="DATE"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center_vertical"
                android:text="TO"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtSeatAvailable"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center_vertical|right"
                android:text="Seat"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtTo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center_vertical"
                android:text="FRom"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center_vertical|right"
                android:text="DATE"
                android:textColor="@color/white" />

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_weight="0.65"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <GridView
            android:background="@color/transparent_black_50"
            android:gravity="center"
            android:id="@+id/gvDriverHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2" />

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="8dp"
            fab:menu_fab_size="normal"
            fab:menu_showShadow="true"
            fab:menu_shadowColor="#66000000"
            fab:menu_shadowRadius="4dp"
            fab:menu_shadowXOffset="1dp"
            fab:menu_shadowYOffset="3dp"
            xmlns:fab="http://schemas.android.com/apk/res-auto"
            fab:fab_size="mini"
            android:src="@drawable/icon_add_trip_small"
            android:id="@+id/fabCreateTrip"  />

    </FrameLayout>
</LinearLayout>