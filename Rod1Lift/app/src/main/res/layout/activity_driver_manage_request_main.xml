<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/llMainProfile"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/gradient_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_weight="0.1"
        android:background="@color/transparent_white_50"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:tint="@color/colorPrimary"
            android:rotation="180"
            android:src="@drawable/icon_right" />

        <TextView
            android:paddingLeft="20dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="0.75"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="MANAGE REQUEST"/>

        <TextView
            android:id="@+id/txtDone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="center"
            android:text="DONE"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />


    </LinearLayout>

    <Spinner
        android:background="@color/transparent_black_50"
        android:textAlignment="center"
        android:spinnerMode="dialog"
        android:id="@+id/spinnerRequestStatus"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <ListView
        android:divider="@android:color/transparent"
        android:background="@color/transparent_black_50"
        android:layout_weight="0.8"
        android:scrollbars="none"
        android:id="@+id/sLvManageRequest"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </ListView>

</LinearLayout>