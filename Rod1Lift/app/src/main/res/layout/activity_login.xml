<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_list" >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="50dp"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:src="@drawable/logo_background"
        app:civ_border_width="1dp"
        app:civ_border_color="@android:color/transparent"/>


   <!-- <TextView
        android:layout_marginTop="20dp"
        android:layout_weight="0.2"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/activity_login_slogan"
        android:textColor="@color/white"
        android:gravity="center|top"/>-->

    <ImageView
        android:layout_gravity="center"
        android:background="@drawable/app_logo1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:gravity="center"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="0.3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.facebook.login.widget.LoginButton
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:id="@+id/btnFbLogin"/>

        <TextView
            android:id="@+id/txtViewApp"
            android:layout_margin="10dp"
            android:background="@color/transparent_black_50"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/activity_login_view_app"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:layout_marginBottom="10dp"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/activity_login_copyright"
            android:textColor="@color/white"
            android:gravity="bottom|center_horizontal"/>

    </LinearLayout>
</LinearLayout>
