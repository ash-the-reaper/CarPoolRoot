<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_list" >

    <LinearLayout
        android:background="@color/transparent_white_50"
        android:orientation="horizontal"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="@string/activity_complete_driver_registration_title"
            android:textColor="@color/colorPrimary"
            android:textSize="22dp" />

        <TextView
            android:paddingRight="20dp"
            android:textStyle="bold"
            android:id="@+id/txtNext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:text="@string/activity_complete_driver_registration_next"
            android:textColor="@color/colorPrimary"
            android:textSize="22dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:weightSum="4"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/llCarMake"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:gravity="center_vertical"
                android:layout_weight="0.4"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/activity_complete_driver_registration_car_details"/>

            <LinearLayout
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:paddingRight="16dp"
                    android:layout_weight="0.7"
                    android:id="@+id/txtCarDetails"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_weight="0.3"
                    android:id="@+id/imgCarDetails"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/icon_right" />

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_separator" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/llYear"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:gravity="center_vertical"
                android:layout_weight="0.4"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/activity_complete_driver_registration_year"/>

            <LinearLayout
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="0.7"
                    android:paddingRight="16dp"
                    android:id="@+id/txtYear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_weight="0.3"
                    android:id="@+id/imgYear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/icon_right" />
                </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_separator" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/llPlateNum"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:gravity="center_vertical"
                android:layout_weight="0.4"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/activity_complete_driver_registration_plate_num"/>

            <LinearLayout
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="0.7"
                    android:id="@+id/txtPlateNum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_weight="0.3"
                    android:id="@+id/imgPlateNum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/icon_right" />
                </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_separator" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/llNumOfPassenger"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:gravity="center_vertical"
                android:layout_weight="0.4"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/activity_complete_driver_registration_number_of_passenger"/>

            <LinearLayout
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="0.7"
                    android:paddingRight="16dp"
                    android:id="@+id/txtNumOfPassenger"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_weight="0.3"
                    android:id="@+id/imgNumOfPassenger"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/icon_right" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_separator" />

    </LinearLayout>

    <LinearLayout
        android:background="@color/transparent_white_50"
        android:layout_weight="0.25"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:scaleType="centerCrop"
            android:background="@color/com_facebook_likeboxcountview_border_color"
            android:layout_margin="1dp"
            android:id="@+id/img1"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <ImageView
            android:scaleType="centerCrop"
            android:background="@color/com_facebook_likeboxcountview_border_color"
            android:layout_margin="1dp"
            android:id="@+id/img2"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:background="@color/transparent_white_50"
        android:layout_weight="0.25"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:scaleType="centerCrop"
            android:background="@color/com_facebook_likeboxcountview_border_color"
            android:layout_margin="1dp"
            android:id="@+id/img3"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <ImageView
            android:scaleType="centerCrop"
            android:background="@color/com_facebook_likeboxcountview_border_color"
            android:layout_margin="1dp"
            android:id="@+id/img4"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>


</LinearLayout>
